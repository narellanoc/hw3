<h1><%= @place["name"]%></h1>


    <% for post in @posts %>
    <h3><%= post["title"]%></h3>
    <h4><%= post["posted_on"] %></h4>
    <%= post["description"] %>
    <% end %>


<p><a href="/posts/new?place_id=<%= @place["id"] %>">New Post for <%= @place["name"]%></a>

<p>
    <b><a href="/places">Back to all places</a></b>
</p>